    <h1>Add Student</h1>

    <% if (errors != undefined) { %>
        <ul>
        <% errors.forEach((error) => { %>
            <li><%= error.msg %></li>
        <% }) %>
        </ul>
    <% } %>

    <form action="/students/add" method="POST">
        <label>Student ID:</label>
        <input type="text" name="sid"><br>
