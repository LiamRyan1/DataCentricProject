<body></body>
    <h1>Add Employee</h1>

    <% if (errors != undefined) { %>
        <ul>
        <% errors.forEach((error) => { %>
            <li><%= error.msg %></li>
        <% }) %>
        </ul>
    <% } %>

    <form action="/addStudent" method="POST">
        <label>ID:</label>
        <input type="text" name="id"><br>
        <label>Name</label>
        <input type="text" name="name"><br>
        <label>Salary</label>
        <input type="text" name="salary"><br>
        <input type="submit" value="OK">
    </form>
</body>